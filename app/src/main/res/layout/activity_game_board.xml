<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#1B215C"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        android:gravity="center">

        <TextView
            android:id="@+id/currentPlayer"
            android:layout_width="wrap_content"
            android:layout_height="60sp"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35sp"
            android:fontFamily="@font/francois_one"
            android:padding="2sp"
            android:text="Current Player: "
            android:textColor="#5597BC"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/mainTextView"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_gravity="left"
            android:layout_marginBottom="30sp"
            android:fontFamily="@font/francois_one"
            android:padding="2sp"
            android:text="Player 1"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="35sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="20sp">

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25sp"
                android:fontFamily="@font/freckle_face"
                android:text="Player X: "
                android:textColor="#5597BC"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/score1tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/freckle_face"
                android:text="0"
                android:textColor="#5597BC"
                android:textSize="30sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="25sp"
                    android:fontFamily="@font/freckle_face"
                    android:text="Player X:"
                    android:textColor="#5597BC"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/score2tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/freckle_face"
                    android:text="0"
                    android:textColor="#5597BC"
                    android:textSize="30sp" />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button

            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#0d1137"
            android:fontFamily="@font/chewy"
            android:textColor="#89DEEC"
            android:textSize="80sp" />
        <Button
            android:id="@+id/button2"
            android:textSize="80sp"
            android:fontFamily="@font/chewy"
            android:background="#0d1137"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#89DEEC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button3"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="80sp"
            android:fontFamily="@font/chewy"
            android:background="#0d1137"
            android:textColor="#89DEEC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="8dp"
            android:textSize="80sp"
            android:background="#0d1137"
            android:fontFamily="@font/chewy"
            android:textColor="#89DEEC"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:textSize="80sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/chewy"
            android:background="#0d1137"
            android:textColor="#89DEEC"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button6"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:textSize="80sp"
            android:background="#0d1137"
            android:fontFamily="@font/chewy"
            android:textColor="#89DEEC"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/button7"
            android:textSize="80sp"
            android:layout_marginLeft="30sp"
            android:fontFamily="@font/chewy"
            android:background="#0d1137"
            android:textColor="#89DEEC"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button8"
            android:textSize="80sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#89DEEC"
            android:layout_width="wrap_content"
            android:background="#0d1137"
            android:fontFamily="@font/chewy"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button9"
            android:textSize="80sp"
            android:fontFamily="@font/chewy"
            android:textColor="#89DEEC"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="#0d1137"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="35sp"
        android:layout_height="40sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset"
            android:textSize="15sp"
            android:text="RESET BOARD"
            android:layout_marginRight="10sp"
            android:padding="5dp"
            android:background="#1a1a1a"
            android:textColor="#89DEEC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/home"
            android:textSize="15sp"
            android:background="#1a1a1a"
            android:padding="5dp"
            android:text="HOME"
            android:layout_marginRight="10sp"
            android:textColor="#89DEEC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/resetScore"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:padding="5dp"
            android:text="RESET SCORES"
            android:textColor="#89DEEC"
            android:background="#1a1a1a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>







</LinearLayout>

